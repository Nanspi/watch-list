<div class="container">
  <h1 class="text-center">New List</h1>

  <div class="w-50 mx-auto">
    <%= simple_form_for @list do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "Back to lists", lists_path, class: "btn btn-secondary mt-3" %>
  </div>

</div>
